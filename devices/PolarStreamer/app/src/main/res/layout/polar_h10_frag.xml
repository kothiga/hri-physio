<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idView_frag1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:text="@string/device_id_view"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/editTextSetID_frag1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextSetID_frag1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="40dp"
            android:hint="@string/set_id_button"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Suspicious0dp" />

        <TextView
            android:id="@+id/connectView_frag1"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/connection_device_view"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idView_frag1" />

        <ToggleButton
            android:id="@+id/start_stop_connection_frag1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            android:textOff="Start Connection"
            android:textOn="Stop Connection"
            app:layout_constraintStart_toEndOf="@+id/connectView_frag1"
            app:layout_constraintTop_toBottomOf="@id/editTextSetID_frag1" />

        <TextView
            android:id="@+id/connectStatusView_frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/connection_status_view"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connectView_frag1" />

        <TextView
            android:id="@+id/status_frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/connectStatusView_frag1"
            app:layout_constraintTop_toBottomOf="@+id/start_stop_connection_frag1" />

        <TextView
            android:id="@+id/batteryView_frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/battery_view"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connectStatusView_frag1" />

        <TextView
            android:id="@+id/battery_frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connectStatusView_frag1" />

        <TextView
            android:id="@+id/Timer_frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/timer_view"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/batteryView_frag1" />

        <Chronometer
            android:id="@+id/timer_frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginTop="68dp"
            android:textSize="18sp"
            android:textColor="@color/ap_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connectStatusView_frag1" />

        <ToggleButton
            android:id="@+id/plot_HR_button_frag1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            android:textOff="Show graph"
            android:textOn="Hide graph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Timer_frag1" />

        <ToggleButton
            android:id="@+id/plot_ECG_button_frag1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            android:textOff="Show graph"
            android:textOn="Hide graph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plotHR" />

        <ToggleButton
            android:id="@+id/plot_ACC_button_frag1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            android:textOff="Show graph"
            android:textOn="Hide graph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plotECG" />

        <com.androidplot.xy.XYPlot
            android:id="@+id/plotHR"
            style="@style/FullScreenGraph"
            android:layout_width="325dp"
            android:layout_height="230dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:backgroundColor="@color/design_default_color_background"
            app:graphBackgroundColor="@color/design_default_color_background"
            app:graphMarginBottom="12dp"
            app:graphMarginLeft="30dp"

            app:graphMarginRight="8dp"
            app:graphMarginTop="20dp"
            app:gridBackgroundColor="#F1F4F4"
            app:gridInsetLeft="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plot_HR_button_frag1"

            app:lineLabels="left"
            app:paddingBottom="10dp"
            app:paddingLeft="5dp"
            app:paddingRight="5dp"
            app:paddingTop="5dp"
            app:rangeTitle="@string/hr_range_title"
            app:rangeTitleTextColor="#000000"
            app:rangeTitleTextSize="14dp"
            app:renderMode="use_background_thread"
            app:title="@string/hr_title"
            app:titleTextColor="#000000"
            app:titleTextSize="15dp" />

        <com.androidplot.xy.XYPlot
            android:id="@+id/plotECG"
            style="@style/FullScreenGraph"
            android:layout_width="325dp"
            android:layout_height="230dp"
            android:layout_marginTop="30dp"
            app:backgroundColor="@color/design_default_color_background"
            app:graphBackgroundColor="@color/design_default_color_background"
            app:graphMarginBottom="12dp"
            app:graphMarginLeft="30dp"

            app:graphMarginRight="5dp"
            app:graphMarginTop="20dp"
            app:gridBackgroundColor="#F1F4F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plot_ECG_button_frag1"

            app:lineLabelInsetLeft="12dp"
            app:lineLabels="left"
            app:rangeTitle="@string/ecg_range_title"
            app:rangeTitleTextColor="#000000"
            app:rangeTitleTextSize="14dp"
            app:renderMode="use_background_thread"
            app:title="@string/ecg_title"
            app:titleTextColor="#000000"
            app:titleTextSize="15dp" />

        <com.androidplot.xy.XYPlot
            android:id="@+id/plotACC"
            style="@style/FullScreenGraph"
            android:layout_width="324dp"
            android:layout_height="234dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            app:backgroundColor="@color/design_default_color_background"
            app:graphBackgroundColor="@color/design_default_color_background"

            app:graphMarginBottom="12dp"
            app:graphMarginLeft="30dp"
            app:graphMarginRight="5dp"
            app:graphMarginTop="20dp"
            app:gridBackgroundColor="#F1F4F4"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plot_ACC_button_frag1"
            app:layout_constraintVertical_bias="1.0"
            app:paddingBottom="10dp"
            app:paddingLeft="5dp"
            app:paddingRight="5dp"
            app:paddingTop="5dp"
            app:lineLabelInsetLeft="12dp"
            app:lineLabels="left"
            app:rangeTitle="@string/acc_range_title"
            app:rangeTitleTextColor="#000000"
            app:rangeTitleTextSize="14dp"
            app:renderMode="use_background_thread"
            app:title="@string/acc_title"
            app:titleTextColor="#000000"
            app:titleTextSize="15dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>